{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3
  },
  "default_agent": "plan",
  "plugin": [
    "opencode-anthropic-auth"
  ],
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5",
      "color": "#3498DB",
      "allow": [
        "beads:*"
      ]
    },
    "build": {
      "model": "anthropic/claude-sonnet-4-5",
      "color": "#E74C3C"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "mobile-mcp": {
      "type": "local",
      "command": [
        "npx",
        "@mobilenext/mobile-mcp@latest"
      ],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "figma-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "figma-developer-mcp",
        "--figma-api-key={env:FIGMA_API_KEY}",
        "--stdio"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--extension"
      ],
      "environment": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "{env:PLAYWRIGHT_MCP_EXTENSION_TOKEN}"
      }
    }
  }
}
