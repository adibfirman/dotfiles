{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3
  },
  "default_agent": "plan",
  "plugin": [
    "opencode-anthropic-auth",
    "opencode-cursor-auth@1.0.16"
  ],
  "provider": {
    "cursor": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cursor Agent (local)",
      "options": {
        "baseURL": "http://127.0.0.1:32123/v1"
      },
      "models": {
        "auto": {
          "name": "Cursor Agent Auto"
        },
        "sonnet-4.5": {
          "name": "Cursor Agent Sonnet 4.5"
        },
        "sonnet-4.5-thinking": {
          "name": "Cursor Agent Sonnet 4.5 Thinking"
        },
        "opus-4.5": {
          "name": "Cursor Agent Opus 4.5"
        }
      }
    }
  },
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5",
      "color": "#3498DB",
      "allow": [
        "beads:*"
      ],
      "prompt": "When you need to ask questions for clarification, always place them at the END of your response, never in the middle of your output text."
    },
    "build": {
      "model": "anthropic/claude-sonnet-4-5",
      "color": "#E74C3C"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "mobile-mcp": {
      "type": "local",
      "command": [
        "npx",
        "@mobilenext/mobile-mcp@latest"
      ],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "figma-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "figma-developer-mcp",
        "--figma-api-key={env:FIGMA_API_KEY}",
        "--stdio"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--extension"
      ],
      "environment": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "{env:PLAYWRIGHT_MCP_EXTENSION_TOKEN}"
      }
    }
  }
}
